<div class="container">
  <h1><%= @cocktail.name %></h1>

  <ul>
    <% @doses.each do |dose| %>
     <li><%= dose.description %> - <%= dose.ingredient.name %>
     <%= link_to cocktail_dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt" ></i>
          <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "add dose", new_cocktail_dose_path(@cocktail.id), class: 'btn btn-primary' %>
</div>

