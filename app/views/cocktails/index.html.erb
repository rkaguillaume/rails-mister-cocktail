<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.maxim.com/.image/t_share/MTUwODg5MTM1MDY0NzU0MDA5/cocktails-promo.jpg);">
    <div class="container">
      <h1>Cocktails Master <strong>awesome recipes</strong> to <strong>creative people</strong>!</h1>
      <p>Change your life and learn how to create aweome cocktail for all your friends</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: 'btn btn-primary' %>
    </div>
  </div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-6 col-sm-4">
      <div class="card-image" style="background-image:url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');"></div>
      <div class="card-content">
        <h3><%= cocktail.name %></h3>
      </div>
      <div class="card-actions">
        <span class="info"><%= link_to "Read the recipe", cocktail_path(cocktail) %></span>
      </div>
    </div>
    <% end %>
  </div>
</div>

